<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 1 常量 -->
	<constant name="struts.devMode" value="true"></constant>
	<constant name="struts.ui.theme" value="simple"></constant>
	
	<!-- 2 公共项 -->
	<package name="common" namespace="/" extends="struts-default">
		<!-- 2.2 拦截器的配置 -->
		<interceptors>
			<!-- 2.2.1 声明（注册） -->
			<interceptor name="loginInterceptor" class="com.itheima.crm.web.interceptor.LoginInterceptor"></interceptor>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="defaultStack">
					<param name="fileUpload.allowedExtensions">.xls,xlsx</param>
				</interceptor-ref>
				<interceptor-ref name="loginInterceptor">				
					<param name="excludeMethods">login</param>
				</interceptor-ref>
				
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="loginStack"></default-interceptor-ref>
		
		<global-results >
			<result name="login">/WEB-INF/pages/login.jsp</result>
		</global-results>
		
		<!-- 2.1配置公共jsp访问Action -->
		<action name="uiAction_*_*">
			<result>/WEB-INF/pages/{1}/{2}.jsp</result>
		</action>
	</package>
	
	<!-- 3 加载其他配置文件 -->
	<include file="struts/struts-staff.xml"></include>
	<include file="struts/struts-post.xml"></include>
	<include file="struts/struts-coursetype.xml"></include>
	<include file="struts/struts-classes.xml"></include>
	
</struts>